<Window x:Class="AsyncWebDemos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="525">
    <Grid>
        <StackPanel>
            <TextBox Name="ResultsTextBox" Height="250" IsReadOnly="True" FontFamily="Lucida Console" />
            <Button Name="StartSyncButton" Content="Download Contents Sync" Click="StartSyncButton_Click" />
            <Button Name="StartAsyncButton" Content="Download Contents Async" Click="StartAsyncButton_Click" />
            <Button Name="StartAsyncAwaitAllButton" Content="Download Contents Async Await All" Click="StartAsyncAwaitAllButton_Click"  />
            <Button Name="TriggerLongRunningBackgroundTaskButton" Content="Trigger Background Task" Click="TriggerLongRunningBackgroundTaskButton_Click" />
            <Button Name="TriggerLongRunningBackgroundTaskWithProgressButton" Content="Trigger Background Task With Progress" Click="TriggerLongRunningBackgroundTaskWithProgressButton_Click" />
        </StackPanel>
    </Grid>
</Window>
